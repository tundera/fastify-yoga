{
  "name": "fastify-yoga",
  "description": "Simple GraphQL server built with GraphQL Yoga and Fastify",
  "private": true,
  "version": "0.1.0",
  "packageManager": "yarn@4.0.0-rc.9",
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.mjs",
      "require": "./dist/*.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "prisma": {
    "seed": "esno -r tsconfig-paths/register scripts/seed.ts"
  },
  "scripts": {
    "watch": "tsup-node src/index.ts --format cjs,esm --watch",
    "build": "tsup-node src/index.ts --format cjs,esm --dts-resolve --sourcemap",
    "dev": "esno scripts/start.ts",
    "start": "node dist/index.js",
    "reset": "esno scripts/reset.ts",
    "test": "vitest",
    "typecheck": "tsc --pretty --noEmit",
    "lint": "TIMING=1 eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "postinstall": "is-ci || husky install",
    "commit": "gacp"
  },
  "dependencies": {
    "@envelop/depth-limit": "1.8.0",
    "@envelop/response-cache": "3.2.0",
    "@graphql-yoga/node": "2.13.11",
    "@pothos/core": "3.19.0",
    "@pothos/plugin-prisma": "3.30.0",
    "@pothos/plugin-relay": "3.24.0",
    "@prisma/client": "4.3.0",
    "env-schema": "5.0.0",
    "fastify": "4.5.3",
    "graphql": "16.6.0",
    "graphql-scalars": "1.18.0",
    "pino": "8.4.2",
    "pino-datadog": "2.0.2",
    "typescript": "4.8.2"
  },
  "devDependencies": {
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "17.1.0",
    "@commitlint/lint": "17.1.0",
    "@types/eslint": "8.4.6",
    "@types/node": "18.0.5",
    "@types/pino-datadog": "2.0.1",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.36.1",
    "@typescript-eslint/parser": "5.36.1",
    "@vitest/ui": "0.22.1",
    "c8": "7.12.0",
    "dotenv": "16.0.2",
    "eslint": "8.23.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-node": "0.3.6",
    "eslint-import-resolver-typescript": "3.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "esno": "0.16.3",
    "execa": "6.1.0",
    "gacp": "3.0.3",
    "husky": "8.0.1",
    "is-ci": "3.0.1",
    "lint-staged": "13.0.3",
    "pino-pretty": "8.1.0",
    "prettier": "2.7.1",
    "prettier-plugin-prisma": "4.2.0",
    "pretty-quick": "3.1.3",
    "prisma": "4.3.0",
    "prisma-repl": "1.4.0",
    "supertest": "6.2.4",
    "tasuku": "2.0.0",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.0",
    "tsup": "6.2.3",
    "vite-tsconfig-paths": "3.5.0",
    "vitest": "0.22.1"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn lint --fix"
    ]
  },
  "gacp": {
    "emoji": "emoji"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
